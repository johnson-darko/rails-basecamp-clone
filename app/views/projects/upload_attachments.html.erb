<div class="change-padding" style="margin-top:30px">
    <div class="row">
        <%= render "links/links", :locals => {:active => 'profile'} %>
        <div class="col-md-9 bg-white right-part">
            <div class="row">
                <div class="col-md-4 profile-column">
                    <h3 class="text-center">Upload Attachment</h3>
                </div>
                <div class="col-md-12">
                    <% flash.each do |type, msg| %>
                        <% if type == 'success' %>
                            <div class="alert alert-success"><%= msg %></div>
                        <% elsif type == 'error' %>
                            <div class="alert alert-danger"><%= msg %></div>
                        <% else %>
                            <div class="alert alert-info"><%= msg %></div>
                        <% end %>
                    <% end %>
                    <%= form_for :attachment, url: url_for(only_path: true), html: {class: 'login-form'} do |f| %>
                        <%= f.label :attachment_title %>
                        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Attachment Title' %>
                            <% if @attachment != nil and @attachment.errors.any? and @attachment.errors.to_h[:title].to_s != "" %>
                                <div class="alert alert-danger"><%= "Title " + @attachment.errors.to_h[:title].to_s %></div>
                            <% end %>
                        <%= f.label :files %>
                        <%= f.file_field :files , multiple: true, class: 'form-control' %>
                            <% if @attachment != nil and @attachment.errors.any? and @attachment.errors.to_h[:files].to_s != "" %>
                                <div class="alert alert-danger"><%= "Files " + @attachment.errors.to_h[:files].to_s %></div>
                            <% end %>
                        <%= f.submit "Upload Attachment", class: 'form-submit' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>